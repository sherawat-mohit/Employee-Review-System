<!-- Header used in many pages of webapp -->
<nav class="navbar navbar-expand-md nav-light" style="background: #0E0E4A;color: white; border-radius: 0 0 20px 20px;">
  <div class="container-fluid">
    <a class="navbar-brand me-lg-5" href="/">
      <!-- Header Logo -->
      <img
        src="https://cdn-icons-png.flaticon.com/512/11300/11300896.png"
        alt="Logo"
        width="35"
        height="35"
        class="d-inline-block align-text-top"
      />
      <span class="text-center fw-semibold" style="color: white;">Employee Review System</span>
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Home button -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if(locals.user) {%>
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-5">
        <li class="nav-item ms-lg-4">
          <a class="nav-link fw-semibold" aria-current="page" href="/" style="color: white;"
            ><i class="fa-solid fa-house"></i> Home</a
          >
        </li>

        <!-- Add employee button (only appear if user is Admin) -->
        <% if(locals.user.role === 'admin') {%>
        <li class="nav-item ms-lg-4">
          <a
            class="nav-link fw-semibold"
            aria-current="page"
            href="/add-employee"
            style="color: white;"
            ><i class="fa-solid fa-plus"></i> Add Employee</a
          >
        </li>
        <%} %>
      </ul>

      <form class="d-flex justify-content-end right-0">
        <div class="btn btn-primary fw-semibold">
          <i class="fa-solid fa-user"></i> <%= user.username %>
        </div>
        <a
          class="btn btn-danger mx-2 fw-semibold"
          href="/sign-out"
        >
          <i class="fa-solid fa-arrow-right-from-bracket"></i>
          Sign Out</a
        >
      </form>
    </div>
    <%} %>
  </div>
</nav>
